func Test_{{.T}}_Add(t *testing.T) {
    var x *{{.T}}
    refresh := func() {
        x = &{{.T}}{}
        x.Add(0, 10)
        for k := {{.k}}(1); k < 6; k++ {
            x.Add(k, 0)
        }
        x.Add(6, -10)
        helper{{.T}}Find(t, x, 0)
        for k := {{.k}}(1); k < 6; k++ {
            helper{{.T}}Find(t, x, k)
        }
        helper{{.T}}Find(t, x, 6)
    }
    refresh()
    x.RandIntn = nil
    x.Add(7, 0)
    helper{{.T}}InOrder(t, x)
    i := helper{{.T}}Find(t, x, 7)
    randIntn := rand.New(rand.NewSource(0)).Intn
    i2 := i
    for j:=0;j<100;j++ {
        refresh()
        x.RandIntn = randIntn
        x.Add(7, 0)
        helper{{.T}}InOrder(t, x)
        i2 = helper{{.T}}Find(t, x, 7)
        if i2 != i {
            break
        }
    }
    if i2 == i {
        t.Fatal("expected positions to change", x)
    }
    randIntn = rand.New(rand.NewSource(1)).Intn
    i3 := i
    for j:=0;j<100;j++ {
        refresh()
        x.RandIntn = randIntn
        x.Add(7, 0)
        helper{{.T}}InOrder(t, x)
        i3 = helper{{.T}}Find(t, x, 7)
        if i3 != i && i3 != i2 {
            break
        }
    }
    if i3 == i || i3 == i2 {
        t.Fatal("expected positions to change", x)
    }
    refresh()
    x.Add(7, 0)
    helper{{.T}}InOrder(t, x)
    ln := len(x.{{.K}})
    x.Add(7, 0)
    helper{{.T}}InOrder(t, x)
    ln2 := len(x.{{.K}})
    if ln != ln2 {
        t.Fatal("length changed", ln, ln2)
    }
}

